ARG BASE_IMAGE_TAG=latest
FROM reactnativecommunity/react-native-android:${BASE_IMAGE_TAG}

ENV DEBIAN_FRONTEND=noninteractive 

ARG ROOT_PASS
ARG LLVM_VERSION=14

RUN for arg in ROOT_PASS; \
  do \
  [ ! -z "${arg}" ] || { echo "ARG \"$arg\" needs to be set"; exit 1; } \
  done;

RUN echo "root:$ROOT_PASS" | chpasswd

RUN sudo apt-get update && \
  apt-get upgrade -y && \
  sudo apt-get install -y \
  lsb-release \
  wget \
  software-properties-common \
  apt-utils
RUN wget -O - https://apt.llvm.org/llvm-snapshot.gpg.key|sudo apt-key add -
RUN sudo add-apt-repository -y \
  "deb http://apt.llvm.org/focal/ llvm-toolchain-focal-${LLVM_VERSION} main"
RUN apt-get autoremove -y \
  wget \
  software-properties-common \
  apt-utils 

RUN apt-get update && \
  apt-get install -y \
  clang-${LLVM_VERSION} \
  lldb-${LLVM_VERSION} \
  lld-${LLVM_VERSION} \
  ccache \
  vim

# Gists
ADD https://gist.githubusercontent.com/utkusarioglu/2d4be44dc7707afccd540ad99ba385e6/raw/create-env-example.sh \
  /scripts/create-env-example.sh
ADD https://gist.githubusercontent.com/utkusarioglu/3523b00578807d63b05399fe57a4b2a7/raw/.bashrc \
  /root/.bashrc
ADD https://gist.githubusercontent.com/utkusarioglu/d5c216c744460c45bf6260d0de4131b4/raw/.inputrc \
  /root/.inputrc
RUN chmod +x \
  /scripts/create-env-example.sh \
  /root/.bashrc \
  /root/.inputrc

# Linking compiler caches
# env is going to be read by ccache, the same path shall be mounted on the
# devcontainer for this to work
ENV CCACHE_DIR=/ccache 
COPY scripts/ln-ccache.sh /scripts/ln-ccache.sh
RUN /scripts/ln-ccache.sh 
